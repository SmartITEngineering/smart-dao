<assembly>
    <id>total-site</id>
    <formats>
        <format>dir</format>
    </formats>
    <fileSets>
        <!-- Copies the change related files -->
        <fileSet>
            <directory>../gh-pages/</directory>
            <includes>
                <include>**/*</include>
            </includes>
            <outputDirectory>/</outputDirectory>
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <directory>../target/generated-resources/xml/xslt/</directory>
            <includes>
                <include>changes-${project.version}.html</include>
            </includes>
            <outputDirectory>/changes/</outputDirectory>
        </fileSet>
        <!-- Copies site plugin generated contents -->
        <!-- Root project content -->
        <fileSet>
            <directory>../target/site/</directory>
            <includes>
                <include>**/*</include>
            </includes>
            <outputDirectory>/site/</outputDirectory>
        </fileSet>
        <!-- Smart Domain project content -->
        <fileSet>
            <directory>../smart-domain/target/site/</directory>
            <includes>
                <include>**/*</include>
            </includes>
            <outputDirectory>/site/smart-domain/</outputDirectory>
        </fileSet>
        <!-- Smart RS project content -->
        <fileSet>
            <directory>../smart-rs/target/site/</directory>
            <includes>
                <include>**/*</include>
            </includes>
            <outputDirectory>/site/smart-rs/</outputDirectory>
        </fileSet>
        <!-- Smart Cache project content -->
        <fileSet>
            <directory>../smart-cache/target/site/</directory>
            <includes>
                <include>**/*</include>
            </includes>
            <outputDirectory>/site/smart-cache/</outputDirectory>
        </fileSet>
        <!-- Smart DAO Search project content -->
        <fileSet>
            <directory>../smart-dao-search/target/site/</directory>
            <includes>
                <include>**/*</include>
            </includes>
            <outputDirectory>/site/smart-dao-search/</outputDirectory>
        </fileSet>
        <!-- Smart Query Parameter project content -->
        <fileSet>
            <directory>../smart-query-param/target/site/</directory>
            <includes>
                <include>**/*</include>
            </includes>
            <outputDirectory>/site/smart-query-param/</outputDirectory>
        </fileSet>
        <!-- Smart Abstract DAO project content -->
        <fileSet>
            <directory>../smart-abstract-dao/target/site/</directory>
            <includes>
                <include>**/*</include>
            </includes>
            <outputDirectory>/site/smart-abstract-dao/</outputDirectory>
        </fileSet>
        <!-- Smart Hibernate Abstract DAO project content -->
        <fileSet>
            <directory>../smart-hibernate-abstract-dao/target/site/</directory>
            <includes>
                <include>**/*</include>
            </includes>
            <outputDirectory>/site/smart-hibernate-abstract-dao/</outputDirectory>
        </fileSet>
        <!-- Smart Version project content -->
        <fileSet>
            <directory>../smart-version/target/site/</directory>
            <includes>
                <include>**/*</include>
            </includes>
            <outputDirectory>/site/smart-version/</outputDirectory>
        </fileSet>
        <!-- Smart Version API project content -->
        <fileSet>
            <directory>../smart-version/smart-version-api/target/site/</directory>
            <includes>
                <include>**/*</include>
            </includes>
            <outputDirectory>/site/smart-version/smart-version-api/</outputDirectory>
        </fileSet>
        <!-- Smart Version JGIT Impl project content -->
        <fileSet>
            <directory>../smart-version/smart-version-jgit-impl/target/site/</directory>
            <includes>
                <include>**/*</include>
            </includes>
            <outputDirectory>/site/smart-version/smart-version-jgit-impl/</outputDirectory>
        </fileSet>
        <!-- Smart Version DAO Integration project content -->
        <fileSet>
            <directory>../smart-version/smart-dao-version/target/site/</directory>
            <includes>
                <include>**/*</include>
            </includes>
            <outputDirectory>/site/smart-version/smart-dao-version/</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>
