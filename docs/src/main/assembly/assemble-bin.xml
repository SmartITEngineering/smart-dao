<assembly>
    <id>dist-nodep</id>
    <formats>
        <format>tar.bz2</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>target/docs-${project.version}-total-site.dir/docs-${project.version}/</directory>
            <includes>
                <include>**/*</include>
            </includes>
            <outputDirectory>/docs/</outputDirectory>
