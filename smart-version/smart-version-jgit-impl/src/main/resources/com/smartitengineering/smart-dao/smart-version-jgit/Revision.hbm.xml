<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
    <class
        name="com.smartitengineering.version.impl.jgit.domain.Revision"
        table="revision_log"
        dynamic-update="false"
        dynamic-insert="false"
    >
        <id
            name="id"
            column="id"
            type="java.lang.Integer"
        >
            <generator class = "increment">
            </generator>
        </id>
        <version name="version" column="version" />
        <property
            name="revisionId"
            column="revision_id"
            type="java.lang.String"
            length="255"
        />
        <property
            name="headRevision"
            column="head_revision"
            type="boolean"
        />
        <component name="resource"
            class="com.smartitengineering.version.impl.jgit.domain.Resource">
            <property
                name="resourceId"
                column="resource_id"
                type="java.lang.String"
            />
        </component>
        
        <many-to-one column="commit_id" name="commit" cascade="none" />
    </class>
</hibernate-mapping>
